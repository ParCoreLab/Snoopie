{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build NCCL Test",
            "type": "shell",
            "command": "source ~/envs/cuda-11-nccl-nvshmem.sh && cd ${workspaceFolder}/test-apps/nccl make",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": "build"
        },
        {
            "label": "Build MemMultiGPU",
            "type": "shell",
            "command": "source ~/envs/cuda-11-nccl-nvshmem.sh &&cd ${workspaceFolder}/tools/mem_multigpu/ && make clean && ARCH=80 make",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}